# Timezone
TZ=UTC

# Telegram Configuration
# These variables will be passed as command-line arguments:
# --telegram (-t) TELEGRAM_TOKEN
# --chat (-c) CHAT_ID
# --interval (-i) INTERVAL_MINUTES
TELEGRAM_TOKEN=  # Leave empty for console mode
CHAT_ID=        # Required if TELEGRAM_TOKEN is set
INTERVAL_MINUTES=60  # Update interval in minutes for Telegram mode (default: 60) 